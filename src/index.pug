extends /_templates/main.pug


block vars
    -
        var entities = self.data.entities

        entities.sort(function (a, b) {
            if (a.name < b.name) {
                return -1
            } else if (a.name > b.name) {
                return 1
            } else {
                return 0
            }
        })


block content
    if entities
        .margin.col-xs-12.col-sm-8.col-md-7.col-md-offset-1
            .row
                each e in entities
                    a.list-item.col-xs-12(href=e.path + '/', data-geo=e.geo, data-info=e.info)= e.name
            .margin
